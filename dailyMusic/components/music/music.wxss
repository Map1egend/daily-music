/* components/music/music.wxss */
.music-flex {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 90%;
  margin: 0 auto;
}

image {
  vertical-align: middle;
}

.music-flex .left,.right {
  position: relative;
  text-align: center;
}

.music-flex .right {
  width: 100%;
}

.music-flex .left .modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.6;
}

.lyric {
  background-color: rgb(20, 184, 166);
  height: 72px;
  line-height: 72px;
}

.bar {
  width: 100%;
  height: 1px;
  background-color: red;
  position: relative;
}
.progress {
  position: absolute;
  top: -1px;
  left: 0;
  background-color: #fff;
  width: 100px;
  height: 3px;
}
.ball {
  width: 16px;
  height: 16px;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: -8px;
  left: -8px;
}